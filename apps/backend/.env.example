AWS_S3_BUCKET=rafa-ilpi-files
AWS_S3_ENDPOINT=https://s3.rafalabs.com.br
AWS_S3_FORCE_PATH_STYLE=true
AWS_ACCESS_KEY_ID=sua-minio-access-key
AWS_SECRET_ACCESS_KEY=sua-minio-secret-key

# AWS S3 (Alternativa - descomentar se usar AWS)
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=rafa-ilpi-files
# AWS_S3_ENDPOINT=  (deixar vazio para AWS S3)
# AWS_S3_FORCE_PATH_STYLE=false
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

