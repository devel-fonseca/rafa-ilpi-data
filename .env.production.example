# ==================================
# RAFA ILPI - Production Environment
# ==================================

# Application
NODE_ENV=production
PORT=3000
APP_NAME=Rafa ILPI
APP_URL=http://localhost:3000
FRONTEND_URL=https://rafa-ilpi.rafalabs.com.br

# CORS Origin (URL pública do frontend - Nginx irá fazer proxy reverso)
CORS_ORIGIN=https://rafa-ilpi.rafalabs.com.br

# Database
DATABASE_URL=postgresql://rafa_user:rafa_pass_prod@localhost:5432/rafa_ilpi
POSTGRES_PASSWORD=rafa_pass_prod_change_me

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_pass_prod_change_me

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=Rafa ILPI <noreply@rafalabs.com.br>
EMAIL_FROM_NAME=Rafa ILPI
EMAIL_REPLY_TO=suporte@rafalabs.com.br

# Company Info
COMPANY_NAME=Rafa Labs Desenvolvimento e Tecnologia
COMPANY_CNPJ=63.409.303/0001-82
COMPANY_PHONE=(19) 98152-4849
COMPANY_EMAIL=contato@rafalabs.com.br
COMPANY_SUPPORT_EMAIL=suporte@rafalabs.com.br
COMPANY_WEBSITE=https://rafalabs.com.br

# Storage Configuration (MinIO)
AWS_REGION=us-east-1
AWS_S3_BUCKET=rafa-ilpi-files
AWS_S3_ENDPOINT=https://s3.rafalabs.com.br
AWS_S3_FORCE_PATH_STYLE=true
AWS_ACCESS_KEY_ID=your-minio-access-key
AWS_SECRET_ACCESS_KEY=your-minio-secret-key

# Encryption (usar 32 bytes - 256 bits para AES-256)
ENCRYPTION_KEY=your-32-byte-encryption-key-here-change-in-production!!

# Logging
LOG_LEVEL=info

# Throttling (Rate Limiting)
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Asaas Payment Gateway
ASAAS_API_KEY=your-asaas-api-key-here
ASAAS_WEBHOOK_TOKEN=your-optional-webhook-token-here
ASAAS_ENVIRONMENT=production

# Frontend API URL (URL pública da API - Nginx faz proxy reverso de /api para :3000)
VITE_API_URL=https://rafa-ilpi.rafalabs.com.br/api
