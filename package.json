{
  "name": "rafa-ilpi-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema de Gest√£o para ILPIs - Rafa Labs",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd apps/backend && npm run start:dev",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd apps/backend && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "install:all": "npm install && cd apps/backend && npm install && cd ../frontend && npm install",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "apps/frontend/**/*.{ts,tsx}": [
      "bash -c 'cd apps/frontend && npm run lint:staged'"
    ],
    "apps/backend/src/**/*.ts": [
      "bash -c 'cd apps/backend && npm run lint:staged'"
    ]
  },
  "author": "Rafa Labs Desenvolvimento e Tecnologia",
  "license": "PROPRIETARY",
  "dependencies": {
    "@nestjs/bull": "^11.0.4",
    "@nestjs/swagger": "^11.2.1",
    "bullmq": "^5.63.1",
    "ioredis": "^5.8.2"
  }
}
